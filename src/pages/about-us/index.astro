import ArrowCard from "@components/ArrowCard"
import PersonCard from "@components/PersonCard.astro"
import { SITE, SOCIALS } from "@consts"

const person = [
  {
    name: "Muhammad Amiruddin",
    username: "",
    role: "Treasurer",
    bio: "I'm a software engineer with a passion for building and breaking things.",
    avatarUrl: "https://i.ibb.co/RT1mLfvC/Muhammad-Amiruddin-Hakim.jpg",
    socials: {
      github: "https://github.com/muhammadamiruddin",
      twitter: "https://twitter.com/muhammadamiruddin",
      linkedin: "https://linkedin.com/in/muhammadamiruddin"
    }
  },
  {
    name: "Jane Doe",
    username: "janedoe",
    role: "Cybersecurity Analyst",
    bio: "I'm a cybersecurity analyst with a passion for securing digital assets.",
    avatarUrl: "https://avatars.githubusercontent.com/u/2",
    socials: {
      github: "https://github.com/janedoe",
      twitter: "https://twitter.com/janedoe",
      linkedin: "https://linkedin.com/in/janedoe"
    }
  },
  {
    name: "Alice Doe",
    username: "alicedoe",
    role: "Web Developer",
    bio: "I'm a web developer with a passion for creating engaging user experiences.",
    avatarUrl: "https://avatars.githubusercontent.com/u/3",
    socials: {
