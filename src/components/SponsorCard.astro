---
export interface Props {
  name: string;
  logo: string | null;
  description: string;
  website: string | null;
  tier: string;
}

const { name, logo, description, website, tier } = Astro.props;

function navigateToWebsite() {
  if (website) {
    window.open(website, '_blank');
  }
}
---

<div class={`card tier-${tier}`} onclick={navigateToWebsite}>
  <div class="card-inner">
    {logo ? (
      <img src={logo} alt={name} class="sponsor-logo" />
    ) : (
      <div class="sponsor-name">{name}</div>
    )}
    <p>{description}</p>
    {website && (
      <a href={website} target="_blank" class="website-icon" onclick={(e: MouseEvent) => e.stopPropagation()}>
        <svg class="globe-icon" role="img" aria-label="Website">
          <use href="/social.svg#globe" />
        </svg>
      </a>
    )}
  </div>
</div>

<style>
.card {
  width: 250px; /* Adjusted for 5:4 aspect ratio */
  height: 200px; /* Adjusted for 5:4 aspect ratio */
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: transform 0.3s;
  cursor: pointer;
}

.card-inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 16px;
}

.sponsor-logo {
  max-width: 100%;
  max-height: 100%;
}

.sponsor-name {
  font-size: 1.5rem;
  font-weight: bold;
}

.website-icon {
  display: inline-flex;
  align-items: center;
  margin-top: 8px;
  padding: 8px 16px;
  background-color: transparent;
  color: #000;
  border-radius: 4px;
  text-decoration: none;
}

.globe-icon {
  width: 24px;
  height: 24px;
}
</style>