---
export interface Props {
  name: string;
  logo: string | null;
  description: string;
  website: string | null;
  tier: string;
}

const { name, logo, description, website, tier } = Astro.props;
---

<a href={website} target="_blank" rel="noopener noreferrer" class={`card tier-${tier}`}>
  <div class="card-inner">
    {logo ? (
      <img src={logo} alt={name} class="partner-logo m-auto" />
    ) : (
      <div class="partner-name">{name}</div>
    )}
  </div>
</a>

<style>
.card {
  width: 250px; /* Adjusted for 5:4 aspect ratio */
  height: 200px; /* Adjusted for 5:4 aspect ratio */
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: transform 0.3s;
  cursor: pointer;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-inner {
  display: flex;
  flex-direction: column;
  text-align: center;
  padding: 16px;
}

.partner-logo {
  max-width: 100%;
  max-height: 100%;
}

.partner-name {
  font-size: 1.5rem;
  font-weight: bold;
}
</style>

